<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2" id="temp">尋找餐廳：</h4>
        <div class="input-group">
          <select class="rounded bg-light" name="condition">
            <option selected>搜尋條件</option>
            <option value="name" {{#if name}}selected{{/if}}>餐廳名稱</option>
            <option value="category" {{#if category}}selected{{/if}}>餐廳種類</option>
          </select>
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱(e.g.梅子)、種類(e.g.美式)" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <a class="d-flex justify-content-between text-decoration-none mt-3" href="/restaurants/new">
        <span style="color: red">{{ feedback }}</span>
        <button class="btn btn-primary">新增餐廳</button>
      </a>
      
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="d-flex flex-row mb-3">
      <select class="form-select" aria-label="Default select example" style="width:150px ;" id="rating-sort">
        <option selected>評價排序方式</option>
        <option value="up">🌟由大到小</option>
        <option value="down">🌟由小到大</option>
      </select>
    </div>
  </div>

  <div class="row" id="data-panel">
    {{#each menus}}
    <div class="col-sm-4" id="menu" data-id="{{this.rating}}">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1 ">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
      
            <span class="badge rounded-pill bg-danger">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
              
          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm text-decoration-none">Edit</button></a>
            <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm text-decoration-none">Details</button></a>
            <form action="restaurants/{{this._id}}/delete" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
    </div>
    {{/each}}
  </div>


  <nav aria-label="..." class="d-flex justify-content-center">
    <ul class="pagination">
      {{#if first}}
        {{#each pages}}
        <li class="page-item">
          <a class="page-link" href="/{{this}}">{{this}}</a>
        </li>
        {{/each}}
        <li class="page-item">
          <a class="page-link" href="/{{nextPage}}">Next</a>
        </li>  
      {{/if}}

      {{#if middle}}
        <li class="page-item">
          <a class="page-link" href="/{{previousPage}}">Previous</a>
        </li>
       {{#each pages}}
        <li class="page-item">
          <a class="page-link" href="/{{this}}">{{this}}</a>
        </li>
        {{/each}}
        <li class="page-item">
          <a class="page-link" href="/{{nextPage}}">Next</a>
        </li> 
      {{/if}}

      {{#if end}}
        <li class="page-item">
          <a class="page-link" href="/{{previousPage}}">Previous</a>
        </li>
        {{#each pages}}
        <li class="page-item">
          <a class="page-link" href="/{{this}}">{{this}}</a>
        </li>
        {{/each}} 
      {{/if}}
    </ul>
  </nav>
    
</div>

