<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="d-flex flex-row justify-content-between mb-3">
      <select class="form-select" aria-label="Default select example" style="width:150px ;" id="rating-sort">
        <option selected>è©•åƒ¹æ’åºæ–¹å¼</option>
        <option value="up">ğŸŒŸç”±å¤§åˆ°å°</option>
        <option value="down">ğŸŒŸç”±å°åˆ°å¤§</option>
      </select>
      <div class="text-primary text-secondary">
        é æ•¸<span id="current-page">{{currentPage}}</span>/{{totalPage}}
      </div>
    </div>
  </div>

  <div class="row" id="data-panel">
    {{#each menus}}
    <div class="col-sm-4" id="menu" data-id="{{this.rating}}">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1 ">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
      
            <span class="badge rounded-pill bg-danger">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
              
          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm text-decoration-none">Edit</button></a>
            <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm text-decoration-none">Details</button></a>
            <form action="/restaurants/{{this._id}}?_method=Delete" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
    </div>
    {{/each}}
  </div>


  <nav aria-label="..." class="d-flex justify-content-center">
    <ul class="pagination">
      {{#if first}}
        {{#each pages}}
        <li class="page-item">
          <a class="page-link" href="/index/{{this}}">{{this}}</a>
        </li>
        {{/each}}
        {{#if nextPage}}   <!--only totalPage more than one, the button will show-->
        <li class="page-item">
          <a class="page-link" href="/index/{{nextPage}}">Next</a>
        </li>  
        {{/if}}
      {{/if}}

      {{#if middle}}
        <li class="page-item">
          <a class="page-link" href="/index/{{previousPage}}">Previous</a>
        </li>
       {{#each pages}}
        <li class="page-item">
          <a class="page-link" href="/index/{{this}}">{{this}}</a>
        </li>
        {{/each}}
        <li class="page-item">
          <a class="page-link" href="/index/{{nextPage}}">Next</a>
        </li> 
      {{/if}}

      {{#if end}}
        <li class="page-item">
          <a class="page-link" href="/index/{{previousPage}}">Previous</a>
        </li>
        {{#each pages}}
        <li class="page-item">
          <a class="page-link" href="/index/{{this}}">{{this}}</a>
        </li>
        {{/each}} 
      {{/if}}
    </ul>
  </nav>
    
</div>
{{/if}}
