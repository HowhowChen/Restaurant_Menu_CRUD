<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2" id="temp">尋找餐廳：</h4>
        <div class="input-group">
          <select class="rounded bg-light" name="condition">
            <option selected>搜尋條件</option>
            <option value="name" {{#if name}}selected{{/if}}>餐廳名稱</option>
            <option value="type" {{#if type}}selected{{/if}}>餐廳種類</option>
          </select>
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱(e.g.梅子)、種類(e.g.美式)" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <span style="color: red">{{ feedback }}</span>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="d-flex flex-row mb-3">
      <select class="form-select" aria-label="Default select example" style="width:150px ;" id="rating-sort">
        <option selected>評價排序方式</option>
        <option value="up">🌟由大到小</option>
        <option value="down">🌟由小到大</option>
      </select>
    </div>
  </div>

  <div class="row" id="data-panel">
    {{#each menus}}
    <div class="col-sm-3" id="menu" data-id="{{this.rating}}">
      <a href="/restaurants/{{this.id}}" class="text-secondary"  >
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
      
            <span class="badge rounded-pill bg-danger">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
              
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
    
</div>
