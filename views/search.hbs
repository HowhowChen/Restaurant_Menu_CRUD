          {{#if name}}<a class="page-link" href="/search?condition={{name}}&keyword={{keyword}}&page={{nextPage}}">Next</a>{{/if}}
          {{#if category}}<a class="page-link" href="/search?condition={{category}}&keyword={{keyword}}&page={{nextPage}}">Next</a>{{/if}}
        </li>  
        {{/if}}

      {{/if}}

