<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="d-flex flex-row justify-content-between mb-3">
      <select class="form-select" aria-label="Default select example" style="width:150px ;" id="rating-sort">
        <option selected>Ë©ïÂÉπÊéíÂ∫èÊñπÂºè</option>
        <option value="up">üåüÁî±Â§ßÂà∞Â∞è</option>
        <option value="down">üåüÁî±Â∞èÂà∞Â§ß</option>
      </select>
      <div class="text-primary text-secondary">
        È†ÅÊï∏<span id="page">{{page}}</span>/{{totalPage}}
      </div>
    </div>
  </div>

  <div class="row" id="data-panel">
    {{#each menus}}
    <div class="col-sm-4" id="menu" data-id="{{this.rating}}">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1 ">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
      
            <span class="badge rounded-pill bg-danger">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
              
          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm text-decoration-none">Edit</button></a>
            <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm text-decoration-none">Details</button></a>
            <form action="restaurants/{{this._id}}/delete" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
    </div>
    {{/each}}
  </div>


  <nav aria-label="..." class="d-flex justify-content-center">
    <ul class="pagination">
      <!--È¶ñÈ†Å-->
      {{#if first}}

        <!--condition = name-->
        {{#if name}}
          {{#each pages}}
          <li class="page-item">
            <a class="page-link" href="/search?condition={{name}}&keyword={{keyword}}&page={{this}}">{{this}}</a>
          </li>
          {{/each}}
        {{/if}}
        
        <!--condition = category-->
        {{#if category}}
